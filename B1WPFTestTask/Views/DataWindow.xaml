<Window x:Class="B1WPFTestTask.Views.DataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:B1WPFTestTask.Views"
        mc:Ignorable="d"
        Title="DataWindow" Height="450" Width="800">
    <Grid>

        <DataGrid x:Name="dataGrid" AutoGenerateColumns="False">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Б/сч" Binding="{Binding AccountNumber}" />
                <DataGridTextColumn Header="Актив" Binding="{Binding IncomingSaldoActive}" />
                <DataGridTextColumn Header="Пассив" Binding="{Binding IncomingSaldoPassive}" />
                <DataGridTextColumn Header="Дебет" Binding="{Binding TurnoverDebit}" />
                <DataGridTextColumn Header="Кредит" Binding="{Binding TurnoverCredit}" />
                <DataGridTextColumn Header="Актив" Binding="{Binding OutcomingSaldoActive}" />
                <DataGridTextColumn Header="Пассив" Binding="{Binding OutcomingSaldoPassive}" />

            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
